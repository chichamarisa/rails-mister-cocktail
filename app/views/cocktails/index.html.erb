<h1>HELLOOOO COCK-TAIL 🐓</h1>

<div class="container">

<div class="row">

<% @cocktails.each do |cocktail| %>
<div class="card" style="width: 18rem;">
  <%= cl_image_tag cocktail.photo %>
  <div class="card-body mb-3 flex">
    <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail.id) %></h5>
    <p class="card-text"></p>
    <p><%= link_to 'Add ingredients', new_cocktail_dose_path(cocktail.id) %></p>
  </div>
</div>
<% end %>
</div>
</div>

